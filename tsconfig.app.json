{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ES2020", "ScriptHost", "WebWorker"],
    "skipLibCheck": true,

    /* JavaScript */
    "allowJs": false,
    "checkJs": false,

    /* Bundler mode */
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,

    /* Project paths */
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@/*": ["assets/*"],
      "$/*": ["../*"]
    }
  },
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/vite-env.d.ts"
  ],
  "exclude": [
    "**/_trash/**/*"
  ]
}
