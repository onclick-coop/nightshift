{
  "name": "nightshift",
  "version": "1.0.0",
  "description": "Nightshift Shopify theme with Vite and Tailwind CSS",
  "keywords": [
    "shopify",
    "theme",
    "vite",
    "tailwindcss"
  ],
  "license": "ISC",
  "author": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "preview": "vite preview",
    "format": "prettier --write \"**/*.liquid\" \"src/**/*.{js,ts,css}\"",
    "icons": "node scripts/copy-icons.js",
    "shopify:dev": "shopify theme dev --store nightshift-dev",
    "shopify:pull": "shopify theme pull --store nightshift-dev",
    "shopify:push": "shopify theme push --store nightshift-dev",
    "shopify:build": "npm run build && shopify theme push --store nightshift-dev"
  },
  "dependencies": {
    "@eslint/js": "^9.35.0",
    "@stylistic/eslint-plugin": "^5.3.1",
    "class-variance-authority": "^0.7.1",
    "colord": "^2.9.3",
    "eslint": "^9.35.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "eslint-plugin-unused-imports": "^4.2.0",
    "globals": "^16.3.0",
    "morphdom": "^2.7.7",
    "neostandard": "^0.12.2",
    "remixicon": "^4.6.0",
    "rollup-plugin-license": "^3.6.0",
    "typescript-eslint": "^8.42.0"
  },
  "devDependencies": {
    "@shopify/prettier-plugin-liquid": "^1.10.0",
    "@types/node": "^24.3.1",
    "autoprefixer": "^10.4.21",
    "deepmerge-ts": "^7.1.5",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^3.4.17",
    "twglow": "^0.0.10",
    "typescript": "^5.9.2",
    "vite": "^7.1.4",
    "vite-plugin-shopify": "^4.0.2"
  }
}
