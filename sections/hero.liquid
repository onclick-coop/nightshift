<section
  class="h-hero-section hero-fallback-bg flex items-end"
  {% if section.settings.background_image %}
    style="--hero-bg: url('{{ section.settings.background_image | image_url: width: 1920 }}')"
  {% endif %}
>
  {% render 'hero-content',
    heading: section.settings.heading,
    button_text: section.settings.button_text,
    button_url: section.settings.button_url
  %}
</section>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image",
      "info": "Recommended: 1920x1080px for best quality. Leave empty to use default hero image."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Born for Rebellion"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}
