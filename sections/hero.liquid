<section class="h-hero-section relative flex items-end overflow-hidden">
  {% if section.settings.background_video %}
    <video class="absolute inset-0 h-full w-full object-cover" autoplay muted loop playsinline>
      <source src="{{ section.settings.background_video | file_url }}" type="video/mp4">
    </video>
  {% elsif section.settings.background_image %}
    <div
      class="hero-fallback-bg absolute inset-0"
      style="--hero-bg: url('{{ section.settings.background_image | image_url: width: 1920 }}')"
    ></div>
  {% else %}
    <div class="hero-fallback-bg absolute inset-0"></div>
  {% endif %}

  <div class="relative z-10 w-full">
    {% render 'hero-content',
      heading: section.settings.heading,
      button_text: section.settings.button_text,
      button_url: section.settings.button_url
    %}
  </div>
</section>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "background_video",
      "label": "Background Video URL",
      "info": "Direct URL to MP4 video file. Upload to Files in Shopify admin first."
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image",
      "info": "Fallback image if no video is provided. Recommended: 1920x1080px."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Born for Rebellion"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}
