<section class="h-hero-section relative flex items-end overflow-hidden">
  {% if section.settings.background_image %}
    <div
      class="hero-fallback-bg absolute inset-0"
      style="--hero-bg: url('{{ section.settings.background_image | image_url: width: 1920 }}')"
    ></div>
  {% else %}
    {% comment %}
      Video URLs:
      - Original (2MB): https://cdn.shopify.com/videos/c/o/v/e68aa85d4cfb47aca4befae6753a2431.mp4
      - Optimized H.264 (692KB, 65% smaller, no audio): https://cdn.shopify.com/videos/c/o/v/55ec91798073467490088a8e5b18bef4.mp4
    {% endcomment %}
    {% render 'video-crossfade',
      video_url: 'https://cdn.shopify.com/videos/c/o/v/e68aa85d4cfb47aca4befae6753a2431.mp4'
    %}
  {% endif %}

  <div class="relative w-full">
    {% render 'hero-content',
      heading: section.settings.heading,
      button_text: section.settings.button_text,
      button_url: section.settings.button_url
    %}
  </div>
</section>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image (Optional)",
      "info": "Override the default video background with an image. Leave empty to use video."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Dark Aesthetic"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}
