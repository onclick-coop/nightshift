<section class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {% for block in section.blocks %}
        <div class="text-center p-6 rounded-lg border border-gray-200 hover:shadow-lg transition-shadow">
          {% if block.settings.icon != blank %}
            <div class="w-16 h-16 mx-auto mb-4 bg-red-100 rounded-full flex items-center justify-center">
              <span class="text-red-600 text-2xl">{{ block.settings.icon }}</span>
            </div>
          {% endif %}
          <h3 class="text-xl font-semibold mb-3 text-gray-900">
            {{ block.settings.title | default: "Feature Title" }}
          </h3>
          <p class="text-gray-600">
            {{ block.settings.description | default: "Feature description goes here" }}
          </p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

