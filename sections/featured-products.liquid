{%- liquid
  assign products_to_show = section.settings.products_to_show | default: 3
  assign collection = collections[section.settings.collection] | default: collections.all
  assign sorted_products = collection.products | sort: 'created_at' | reverse
-%}

<div class="grid grid-cols-2">
  <!-- Left column - single large product -->
  {% assign first_product = sorted_products.first %}
  {% if first_product %}
    {% render 'product-card', product: first_product, size: 'large' %}
  {% endif %}

  <!-- Right column - two stacked products -->
  <div class="flex flex-col">
    {% for product in sorted_products limit: 2 offset: 1 %}
      {% render 'product-card', product: product, size: 'small' %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Featured Products",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Featured Products",
      "label": "Heading"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4,
      "label": "Products to show"
    }
  ],
  "presets": [
    {
      "name": "Featured Products"
    }
  ]
}
{% endschema %}
