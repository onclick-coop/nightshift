{% comment %}
  Footer Snippet

  Parameters:
  - None (static footer with navigation, newsletter signup, and legal links)
{% endcomment %}

<footer class="mt-0 border-t border-gray-800 bg-black">
  <div class="w-full px-6 py-16">
    <!-- Main Footer Content -->
    <div class="mb-12 grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-4">
      <!-- Brand Column -->
      <div>
        <div class="logo-bg mb-6 h-8 w-32"></div>
        <p class="mb-6 text-sm leading-relaxed text-gray-300">
          Dark aesthetic streetwear for those who dare to be different.
        </p>
        <div class="flex space-x-4">
          {% render 'social-icon', url: '#', icon: 'pinterest', alt: 'Pinterest', class: 'size-6' %}
          {% render 'social-icon', url: '#', icon: 'instagram', alt: 'Instagram', class: 'size-6' %}
          {% render 'social-icon', url: '#', icon: 'twitter', alt: 'Twitter', class: 'size-6' %}
          {% render 'social-icon', url: '#', icon: 'tiktok', alt: 'TikTok', class: 'size-6' %}
        </div>
      </div>

      <!-- Shop Column -->
      <div>
        <h3 class="mb-6 text-lg font-bold uppercase tracking-wider text-white">Shop</h3>
        <ul class="space-y-3">
          <li>
            <a href="{{ routes.collections_url }}" class="text-sm text-gray-300 transition-colors hover:text-red-500">
              All Collections
            </a>
          </li>
          <li><a href="#" class="text-sm text-gray-300 transition-colors hover:text-red-500">New Arrivals</a></li>
          <li><a href="#" class="text-sm text-gray-300 transition-colors hover:text-red-500">Sale</a></li>
          <li><a href="#" class="text-sm text-gray-300 transition-colors hover:text-red-500">Gift Cards</a></li>
        </ul>
      </div>

      <!-- Support Column -->
      <div>
        <h3 class="mb-6 text-lg font-bold uppercase tracking-wider text-white">Support</h3>
        <ul class="space-y-3">
          <li>
            <a href="/pages/contact" class="text-sm text-gray-300 transition-colors hover:text-red-500">Contact Us</a>
          </li>
          <li><a href="#" class="text-sm text-gray-300 transition-colors hover:text-red-500">Size Guide</a></li>
          <li><a href="#" class="text-sm text-gray-300 transition-colors hover:text-red-500">Shipping & Returns</a></li>
          <li><a href="#" class="text-sm text-gray-300 transition-colors hover:text-red-500">FAQ</a></li>
        </ul>
      </div>

      <!-- Newsletter Column -->
      <div>
        <h3 class="mb-6 text-lg font-bold uppercase tracking-wider text-white">Stay Connected</h3>
        <p class="mb-4 text-sm text-gray-300">Get exclusive access to new drops and rebel updates.</p>
        <form class="space-y-3">
          <input
            type="email"
            placeholder="Enter your email"
            class="w-full border border-gray-700 bg-gray-900 px-4 py-2 text-sm text-white transition-colors focus:border-red-500 focus:outline-none"
          >
          <button
            type="submit"
            class="w-full bg-red-600 px-4 py-2 text-sm font-medium text-white transition-colors hover:bg-red-700"
          >
            Join the Rebellion
          </button>
        </form>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 pt-8">
      <div class="flex flex-col items-center justify-between space-y-4 lg:flex-row lg:space-y-0">
        <!-- Copyright -->
        <div class="text-sm text-gray-400">
          Â© {{ 'now' | date: '%Y' }}
          Nightshift. All rights reserved. Dark aesthetic streetwear.
        </div>

        <!-- Legal Links -->
        <div class="flex space-x-6">
          <a href="#" class="text-sm text-gray-400 transition-colors hover:text-red-500">Privacy Policy</a>
          <a href="#" class="text-sm text-gray-400 transition-colors hover:text-red-500">Terms of Service</a>
          <a href="#" class="text-sm text-gray-400 transition-colors hover:text-red-500">Refund Policy</a>
        </div>

        <!-- Payment Icons -->
        <div class="flex space-x-2">
          <div class="flex h-6 w-8 items-center justify-center border border-gray-700 bg-gray-800 text-xs text-gray-400">
            V
          </div>
          <div class="flex h-6 w-8 items-center justify-center border border-gray-700 bg-gray-800 text-xs text-gray-400">
            MC
          </div>
          <div class="flex h-6 w-8 items-center justify-center border border-gray-700 bg-gray-800 text-xs text-gray-400">
            AE
          </div>
          <div class="flex h-6 w-8 items-center justify-center border border-gray-700 bg-gray-800 text-xs text-gray-400">
            PP
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>
