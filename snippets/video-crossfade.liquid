{% comment %}
  Video Crossfade Snippet

  Parameters:
  - video_url: Video source URL (required)
{% endcomment %}

<video
  class="absolute inset-0 h-full w-full object-cover transition-opacity duration-1000 ease-in-out"
  id="hero-video-1"
  data-video-url="{{ video_url }}"
  autoplay
  muted
  playsinline
  loop
>
  <!-- Source will be set dynamically by JavaScript -->
</video>

<video
  class="absolute inset-0 h-full w-full object-cover opacity-0 transition-opacity duration-1000 ease-in-out"
  id="hero-video-2"
  muted
  playsinline
  loop
>
  <!-- Source will be set dynamically by JavaScript -->
</video>

{% render 'vite-tag' with 'video-crossfade.ts' %}
