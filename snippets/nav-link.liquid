{% comment %}
  Navigation Link Snippet

  Parameters:
  - url: Link URL (required)
  - text: Link text (required)
  - alt: Alternative text for accessibility (required)
{% endcomment %}

<a
  href="{{ url }}"
  class="px-4 py-3 text-white/50 transition-colors hover:text-white hover:[-webkit-text-stroke:0.5px_currentColor]"
  aria-label="{{ alt }}"
>
  {{ text }}
</a>
