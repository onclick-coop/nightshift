<div class="w-full bg-black text-white min-h-screen">
  <div class="max-w-[1920px] mx-auto px-6 py-16">
    <!-- Collection Header -->
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
        {{ collection.title | default: 'All Collections' }}
      </h1>
      {% if collection.description != blank %}
        <div class="text-xl text-gray-300 max-w-3xl mx-auto">
          {{ collection.description }}
        </div>
      {% else %}
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">Browse our complete collection of products</p>
      {% endif %}
    </div>

    <!-- Products Filter and Sort -->
    <div class="flex justify-between items-center mb-8">
      <div class="flex items-center text-sm text-gray-300">
        <span>
          {{ collection.products_count }}
          {% if collection.products_count == 1 %}product{% else %}products{% endif %}
        </span>
      </div>

      <div class="flex items-center space-x-4">
        <!-- Sort Dropdown -->
        <div class="relative">
          <label for="sort-by" class="sr-only">Sort by</label>
          <select
            id="sort-by"
            name="sort_by"
            onchange="location.href = this.value"
            class="block w-full px-4 py-2 text-sm border border-gray-600 bg-gray-800 text-white focus:outline-none focus:ring-2 focus:ring-red-600 focus:border-transparent"
          >
            <option
              value="{{ collection.url }}?sort_by=created-desc"
              {% if collection.sort_by == 'created-desc' %}
                selected
              {% endif %}
            >
              Newest first
            </option>
            <option
              value="{{ collection.url }}?sort_by=price-ascending"
              {% if collection.sort_by == 'price-ascending' %}
                selected
              {% endif %}
            >
              Price: Low to High
            </option>
            <option
              value="{{ collection.url }}?sort_by=price-descending"
              {% if collection.sort_by == 'price-descending' %}
                selected
              {% endif %}
            >
              Price: High to Low
            </option>
            <option
              value="{{ collection.url }}?sort_by=title-ascending"
              {% if collection.sort_by == 'title-ascending' %}
                selected
              {% endif %}
            >
              A-Z
            </option>
            <option
              value="{{ collection.url }}?sort_by=title-descending"
              {% if collection.sort_by == 'title-descending' %}
                selected
              {% endif %}
            >
              Z-A
            </option>
          </select>
        </div>
      </div>
    </div>

    {% paginate collection.products by 12 %}
      {% if collection.products.size > 0 %}
        <!-- Products Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-0 mb-12">
          {% for product in collection.products %}
            <div class="group bg-black border border-gray-800 hover:border-red-500 transition-all duration-300 overflow-hidden">
              <!-- Product Image -->
              <div class="aspect-square overflow-hidden relative">
                {% if product.featured_image %}
                  <a href="{{ product.url }}">
                    <img
                      src="{{ product.featured_image | image_url: width: 400 }}"
                      alt="{{ product.featured_image.alt | escape }}"
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                      loading="lazy"
                    >
                  </a>
                {% else %}
                  <div class="w-full h-full bg-gray-900 flex items-center justify-center">
                    <span class="text-gray-500">No image</span>
                  </div>
                {% endif %}

                <!-- Quick Add Button (appears on hover) -->
                {% unless product.has_only_default_variant %}
                  <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-50 transition-all duration-300 flex items-end justify-center pb-4">
                    <a
                      href="{{ product.url }}"
                      class="opacity-0 group-hover:opacity-100 bg-white text-black px-4 py-2 font-medium transition-all duration-300 transform translate-y-2 group-hover:translate-y-0"
                    >
                      View Options
                    </a>
                  </div>
                {% else %}
                  <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-50 transition-all duration-300 flex items-end justify-center pb-4">
                    <form action="/cart/add" method="post" enctype="multipart/form-data">
                      <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                      <button
                        type="submit"
                        class="opacity-0 group-hover:opacity-100 bg-red-600 text-white px-4 py-2 font-medium transition-all duration-300 transform translate-y-2 group-hover:translate-y-0 hover:bg-red-700"
                      >
                        Quick Add
                      </button>
                    </form>
                  </div>
                {% endunless %}
              </div>

              <!-- Product Info -->
              <div class="p-4">
                <h3 class="text-lg font-semibold text-white mb-2 line-clamp-2">
                  <a href="{{ product.url }}" class="hover:text-red-500 transition-colors">
                    {{ product.title }}
                  </a>
                </h3>

                <!-- Price -->
                <div class="flex items-center justify-between">
                  <div class="price">
                    {% if product.compare_at_price > product.price %}
                      <span class="text-lg font-bold text-red-500">
                        {{ product.price | money }}
                      </span>
                      <span class="text-sm text-gray-400 line-through ml-2">
                        {{ product.compare_at_price | money }}
                      </span>
                    {% else %}
                      <span class="text-lg font-bold text-red-500">
                        {{ product.price | money }}
                      </span>
                    {% endif %}
                  </div>

                  <!-- Vendor (if available) -->
                  {% if product.vendor != blank and product.vendor != shop.name %}
                    <span class="text-xs text-gray-400">{{ product.vendor }}</span>
                  {% endif %}
                </div>

                <!-- Variant Count -->
                {% if product.variants.size > 1 %}
                  <p class="text-xs text-gray-400 mt-2">{{ product.variants.size }} variants available</p>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>

        <!-- Pagination -->
        {% if paginate.pages > 1 %}
          <nav class="flex justify-center items-center space-x-2">
            {% if paginate.previous %}
              <a
                href="{{ paginate.previous.url }}"
                class="px-4 py-2 text-sm font-medium text-gray-300 bg-gray-800 border border-gray-600 hover:bg-gray-700 hover:text-white transition-colors"
              >
                Previous
              </a>
            {% endif %}

            {% for part in paginate.parts %}
              {% if part.is_link %}
                <a
                  href="{{ part.url }}"
                  class="px-4 py-2 text-sm font-medium text-gray-300 bg-gray-800 border border-gray-600 hover:bg-gray-700 hover:text-white transition-colors"
                >
                  {{ part.title }}
                </a>
              {% else %}
                {% if part.title == paginate.current_page %}
                  <span class="px-4 py-2 text-sm font-medium text-white bg-red-600 border border-red-600">
                    {{ part.title }}
                  </span>
                {% else %}
                  <span class="px-4 py-2 text-sm font-medium text-gray-500">
                    {{ part.title }}
                  </span>
                {% endif %}
              {% endif %}
            {% endfor %}

            {% if paginate.next %}
              <a
                href="{{ paginate.next.url }}"
                class="px-4 py-2 text-sm font-medium text-gray-300 bg-gray-800 border border-gray-600 hover:bg-gray-700 hover:text-white transition-colors"
              >
                Next
              </a>
            {% endif %}
          </nav>
        {% endif %}

      {% else %}
        <!-- Empty Collection -->
        <div class="text-center py-16">
          <div class="max-w-md mx-auto">
            <div class="w-24 h-24 mx-auto mb-6 bg-gray-800 flex items-center justify-center">
              <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
              </svg>
            </div>

            <h2 class="text-2xl font-bold text-white mb-4">No products found</h2>

            <p class="text-gray-300 mb-8">This collection doesn't contain any products yet.</p>

            <a
              href="{{ routes.collections_url }}"
              class="inline-block bg-red-600 text-white px-8 py-3 hover:bg-red-700 transition-colors font-medium"
            >
              Browse All Collections
            </a>
          </div>
        </div>
      {% endif %}
    {% endpaginate %}
  </div>
</div>
