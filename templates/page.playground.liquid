<div class="w-full bg-black text-white min-h-screen">
  <div class="max-w-[1920px] mx-auto px-6 py-16">
    <div class="max-w-4xl mx-auto">
      <!-- Page Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
          {{ page.title }}
        </h1>
      </div>

      <!-- Custom Playground Content -->
      <div class="text-red-500 text-6xl text-center py-12">
        Playground Environment
      </div>

      <!-- Interactive Playground Section -->
      <div class="mt-12 p-8 border border-gray-700 rounded-lg">
        <h2 class="text-2xl font-bold text-white mb-6">Component Testing Area</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Sample components can be added here -->
          <div class="bg-gray-900 p-6 rounded-lg">
            <h3 class="text-lg font-semibold text-red-500 mb-3">Test Component 1</h3>
            <p class="text-gray-300">This is a test component area.</p>
            <button class="mt-4 bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded transition-colors">
              Test Button
            </button>
          </div>
          <div class="bg-gray-900 p-6 rounded-lg">
            <h3 class="text-lg font-semibold text-red-500 mb-3">Test Component 2</h3>
            <p class="text-gray-300">Another test component area.</p>
            <div class="mt-4 flex space-x-2">
              <span class="bg-red-600 text-white px-3 py-1 rounded text-sm">Tag 1</span>
              <span class="bg-gray-700 text-white px-3 py-1 rounded text-sm">Tag 2</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Debugging Info -->
      <div class="mt-8 p-4 bg-gray-900 rounded-lg text-sm">
        <h3 class="text-white font-semibold mb-2">Debug Info:</h3>
        <p class="text-gray-400">Page Handle: {{ page.handle }}</p>
        <p class="text-gray-400">Template: {{ template.name }}</p>
        <p class="text-gray-400">Page Title: {{ page.title }}</p>
      </div>

      <!-- Page Content from Shopify Admin -->
      {% if page.content != blank %}
      <div class="prose prose-invert prose-lg max-w-none mt-8">
        <div class="text-gray-300 leading-relaxed">
          {{ page.content }}
        </div>
      </div>
      {% endif %}
    </div>
  </div>
</div>
