<div class="w-full bg-black text-white min-h-screen">
  <div class="max-w-[1920px] mx-auto px-6 py-16">
    <div class="max-w-4xl mx-auto">
      <!-- Page Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
          {{ page.title }}
        </h1>
      </div>

      <!-- Custom Playground Content -->
      <div class="text-red-500 text-6xl text-center py-12">
        Playground Environment
      </div>

      <!-- Page Content from Shopify Admin -->
      {% if page.content != blank %}
      <div class="prose prose-invert prose-lg max-w-none">
        <div class="text-gray-300 leading-relaxed">
          {{ page.content }}
        </div>
      </div>
      {% endif %}

      <!-- Interactive Playground Section -->
      <div class="mt-12 p-8 border border-gray-700 rounded-lg">
        <h2 class="text-2xl font-bold text-white mb-6">Component Testing Area</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Sample components can be added here -->
          <div class="bg-gray-900 p-6 rounded-lg">
            <h3 class="text-lg font-semibold text-red-500 mb-3">Test Component 1</h3>
            <p class="text-gray-300">This is a test component area.</p>
          </div>
          <div class="bg-gray-900 p-6 rounded-lg">
            <h3 class="text-lg font-semibold text-red-500 mb-3">Test Component 2</h3>
            <p class="text-gray-300">Another test component area.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>