<div class="w-full bg-black text-white min-h-screen">
  <div class="max-w-[1920px] mx-auto px-6 py-16">
    <!-- Cart Header -->
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">Shopping Cart</h1>
    </div>

    {% if cart.item_count > 0 %}
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Cart Items -->
        <div class="lg:col-span-2">
          <div class="space-y-0">
            {% for item in cart.items %}
              <div class="flex items-start space-x-4 p-6 border border-gray-800 bg-black">
                <!-- Product Image -->
                <div class="flex-shrink-0 w-24 h-24">
                  {% if item.image %}
                    <img
                      src="{{ item.image | image_url: width: 200 }}"
                      alt="{{ item.title | escape }}"
                      class="w-full h-full object-cover"
                    >
                  {% else %}
                    <div class="w-full h-full bg-gray-900 flex items-center justify-center">
                      <span class="text-gray-500 text-xs">No image</span>
                    </div>
                  {% endif %}
                </div>

                <!-- Product Details -->
                <div class="flex-1 min-w-0">
                  <h3 class="text-lg font-semibold text-white mb-1">
                    <a href="{{ item.url }}" class="hover:text-red-500 transition-colors">
                      {{ item.product.title }}
                    </a>
                  </h3>

                  {% unless item.product.has_only_default_variant %}
                    <p class="text-sm text-gray-400 mb-2">
                      {{ item.variant.title }}
                    </p>
                  {% endunless %}

                  <div class="flex items-center space-x-4">
                    <!-- Quantity Controls -->
                    <div class="flex items-center border border-gray-600">
                      <button
                        type="button"
                        class="px-3 py-1 text-white hover:bg-gray-800 transition-colors"
                        onclick="updateQuantity({{ forloop.index }}, {{ item.quantity | minus: 1 }})"
                      >
                        -
                      </button>
                      <input
                        type="number"
                        value="{{ item.quantity }}"
                        min="0"
                        class="w-16 px-2 py-1 text-center bg-black text-white border-0 focus:outline-none"
                        onchange="updateQuantity({{ forloop.index }}, this.value)"
                      >
                      <button
                        type="button"
                        class="px-3 py-1 text-white hover:bg-gray-800 transition-colors"
                        onclick="updateQuantity({{ forloop.index }}, {{ item.quantity | plus: 1 }})"
                      >
                        +
                      </button>
                    </div>

                    <!-- Remove Item -->
                    <button
                      type="button"
                      class="text-red-500 hover:text-red-400 transition-colors text-sm"
                      onclick="updateQuantity({{ forloop.index }}, 0)"
                    >
                      Remove
                    </button>
                  </div>
                </div>

                <!-- Price -->
                <div class="text-right">
                  <div class="text-lg font-bold text-red-500">
                    {{ item.final_line_price | money }}
                  </div>
                  {% if item.quantity > 1 %}
                    <div class="text-sm text-gray-400">{{ item.final_price | money }} each</div>
                  {% endif %}
                </div>
              </div>
            {% endfor %}
          </div>
        </div>

        <!-- Cart Summary -->
        <div class="lg:col-span-1">
          <div class="border border-gray-800 bg-black p-6 sticky top-8">
            <h2 class="text-xl font-bold text-white mb-6">Order Summary</h2>

            <div class="space-y-3 mb-6">
              <div class="flex justify-between">
                <span class="text-gray-300">Subtotal ({{ cart.item_count }} items)</span>
                <span class="text-white font-semibold">{{ cart.total_price | money }}</span>
              </div>

              <div class="flex justify-between text-sm">
                <span class="text-gray-400">Shipping</span>
                <span class="text-gray-400">Calculated at checkout</span>
              </div>

              <div class="border-t border-gray-700 pt-3">
                <div class="flex justify-between text-lg font-bold">
                  <span class="text-white">Total</span>
                  <span class="text-red-500">{{ cart.total_price | money }}</span>
                </div>
              </div>
            </div>

            <!-- Checkout Button -->
            <button
              type="submit"
              name="add"
              class="w-full bg-red-600 text-white py-3 px-6 font-medium hover:bg-red-700 transition-colors mb-4"
              onclick="window.location.href='/checkout'"
            >
              Proceed to Checkout
            </button>

            <!-- Continue Shopping -->
            <a
              href="{{ routes.collections_url }}"
              class="block w-full text-center border border-gray-600 text-gray-300 py-3 px-6 hover:bg-gray-800 hover:text-white transition-colors"
            >
              Continue Shopping
            </a>
          </div>
        </div>
      </div>

    {% else %}
      <!-- Empty Cart -->
      <div class="text-center py-16">
        <div class="max-w-md mx-auto">
          <div class="w-24 h-24 mx-auto mb-6 bg-gray-800 flex items-center justify-center">
            <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 5H17M7 13v6a2 2 0 002 2h6a2 2 0 002-2v-6M9 9h6v4H9V9z"></path>
            </svg>
          </div>

          <h2 class="text-2xl font-bold text-white mb-4">Your cart is empty</h2>

          <p class="text-gray-300 mb-8">Add some products to get started.</p>

          <a
            href="{{ routes.collections_url }}"
            class="inline-block bg-red-600 text-white px-8 py-3 hover:bg-red-700 transition-colors font-medium"
          >
            Start Shopping
          </a>
        </div>
      </div>
    {% endif %}
  </div>
</div>

<script>
  function updateQuantity(line, quantity) {
    fetch('/cart/change.js', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({
        line: line,
        quantity: quantity,
      }),
    })
      .then((response) => response.json())
      .then((data) => {
        location.reload();
      })
      .catch((error) => {
        console.error('Error:', error);
      });
  }
</script>
